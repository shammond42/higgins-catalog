-content_for(:title, "#{@artifact.std_term.titlecase} : Higgins Catalog")
- content_for(:sidebar) do
  = render partial: 'info_sidebar'

%h1.artifact-name
  :textile
    #{@artifact.std_term.titlecase}

- if @artifact.artifact_images.any?
  = image_tag @artifact.artifact_images.first.path, class: 'artifact-image'
  
%h2 Description
- if @artifact.label_text.present?
  %blockquote
    :textile
      #{@artifact.label_text}
  %small
    %i Exhibit Label
%p= @artifact.description

- if @artifact.comments.present?
  %h2 Curator's Comments
  %p= @artifact.comments

- if @artifact.bibliography.present?
  %h2 Bibliography
  :textile
    #{@artifact.bibliography}

- if @artifact.published_refs.present? || @artifact.exhibit_history.present?
  %h2 Publication & Exhibit History
  %p= @artifact.published_refs
  %p= @artifact.exhibit_history

- if @questions.any?
  %h2 Questions & Answers
  %dl.question-list
    - @questions.each do |question|
      %dt{class: question_class(question)}= question.question
      %dd.muted== Asked by #{question.nickname} (#{question.email}) on #{question.created_at.stamp('June 1, 2012')}
      - if question.answer.present?
        %dd= question.answer
      - elsif user_signed_in?
        %dd
          = form_for question do |f|
            = f.text_area :answer, class: 'input-xxlarge', rows: 5
            <br />
            = f.submit "Answer the question", name: nil, class: 'btn btn-inverse btn-mini'
            = delete_question_link question

- unless user_signed_in?
  - if @artifact.questions.answered.any?
    %h2 Ask Your Own Question
  -else
    %h2 Ask a Question
  = render 'questions/form'