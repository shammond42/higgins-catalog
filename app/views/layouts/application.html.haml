!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="keywords" content="higgins, armor, weapons, steel, history, artifacts")
    %meta(name="description" content="Online catalog for the collection of the Higgins Armory Museum.")
    %meta(name="author" content="Steven Hammond (@shammond42)")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Higgins Catalog"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"
    %script{type: "text/javascript", src: "http://use.typekit.net/xff0bdm.js"}
    %script{type: "text/javascript"}
      try{Typekit.load();}catch(e){}
    %link(href="/favicon.ico" rel="shortcut icon")
    = ga_tracking_code unless request.local?

  %body
    .navbar.navbar-fixed-top.navbar-inverse
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.logo.hidden-phone{href: 'http://higgins.org'}
            %img{src: '/assets/higgins-logo.gif'}
          %a.brand{href: "/"} The Virtual Armory
          .container.nav-collapse
            %ul.nav
              %li= link_to "About", page_path(:about)
              %li= link_to "Dedication", page_path(:dedication)
              %li= link_to "Higgins Museum", 'http://higgins.org'
              -if user_signed_in?
                %li= link_to 'Questions', questions_path
                %li= link_to 'Sign Out', destroy_user_session_path, method: :delete
    .container-fluid
      .row-fluid
        .span8.main
          = yield
        .span4.side
          .sidebar-nav
            = yield(:sidebar)
    .navbar.navbar-fixed-bottom.navbar-inverse.visible-phone
      .navbar-inner
        .container-fluid
          %a.logo.visible-phone{href: 'http://higgins.org'}
            %img{src: '/assets/higgins-logo.gif'}
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
