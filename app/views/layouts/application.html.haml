!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="keywords" content="higgins, armor, weapons, steel, history, artifacts")
    %meta(name="description" content="Online catalog for the collection of the Higgins Armory Museum.")
    %meta(name="author" content="Steven Hammond (@shammond42)")
    %meta(name="copyright" conten="Content and photos copyright 2012 Higgins Armory Museum, code and style copyright 2012 Steven Hammond.")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= "#{subtitle}Search the Higgins Collection"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"
    %link(href="/favicon.ico" rel="shortcut icon")
    = ga_tracking_code unless request.local?

  %body
    = render partial: 'layouts/nav_menu'
    .container
      .row
        %aside.span4#side
          #sidebar
            = yield(:sidebar)
        %section.span8#main
          #flash-messages
            =render :partial => 'layouts/flash_messages', :locals => {:flash => flash}
          = yield
    %footer.navbar.navbar-fixed-bottom.navbar-inverse.visible-phone
      .navbar-inner
        .container-fluid
          %a.logo.visible-phone{href: 'http://higgins.org'}
            %img{src: '/assets/higgins-logo.gif'}
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
