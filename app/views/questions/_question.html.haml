%dl.question-item.control-group
  %dt{class: question_class(question)}= question.question
  %dd.muted= question_byline(question)
  - if question.answer.present?
    %dd.answer= question.answer
    - if user_signed_in?
      %dd.admin_links
        = edit_answer_link question
        = delete_question_link question
  - elsif user_signed_in?
    %dd
      = render partial: 'questions/answer_form', locals: {question: question}